<% provide :title, t("signup") %>
<h1><%= t ("signup")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, I18n.t("confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit I18n.t("create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
